<%- include('partials/header') %>

<div class="container">
  <div class="jumbotron text-center mt-5">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-4 mt-3">Secrets</h1>
    <p class="secret-text">Don't keep your secrets, share them anonymously!</p>

    <form action="/submit" method="POST" class="mt-4">
      <div class="form-group">
        <input type="text" class="form-control text-center" name="secret" placeholder="What's your secret?" required>
      </div>
      <button type="submit" class="btn btn-dark btn-lg mt-3">Submit</button>
    </form>

    <div class="mt-4">
      <a href="/secrets" class="btn btn-secondary btn-lg">View Secrets</a>
    </div>
  </div>
</div>

